#! /bin/bash

## Might have trouble with symbolic links
cd $(dirname "${BASH_SOURCE[0]}")
. ./config-filelist

files="$( ls ../test | grep -v '^rac' | comm -23 - skips | sort | sed -e 'sx^x../test/x' )"

threads=6
if [ $# -gt 0 ]; then
  if [ "$1" = "-t" ]; then
    threads=$2
    shift
    shift
  fi
fi

if [ $# -gt 0 ]; then
  . ./spawn "$@"
else
  . ./spawn $files
fi
