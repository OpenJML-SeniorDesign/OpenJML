#! /bin/bash

R=$( cd $(dirname "$BASH_SOURCE") && pwd)
ROOT=$R/../../OpenJDKModule
JROOT=$R/../libs
JUNIT="$JROOT/junit-4.13.2.jar:$JROOT/hamcrest-core-1.3.jar:$JROOT/junit-jupiter-api-5.5.2.jar:$JROOT/apiguardian-api-1.1.0.jar"
NJAVAC=$ROOT/build/*/jdk/bin/javac
NJAVA=$ROOT/build/*/jdk/bin/java

cd $R
rm -f *.class
CP=".:../src:$JUNIT"
( NOJML= $NJAVAC -Xlint:unchecked -cp $CP Test.java ../src/org/jmlspecs/openjmltest/testcases/*.java ) || exit 1
( cd ..; OPENJML_ROOT="$ROOT/../../Solvers" $NJAVA -cp unittests:src:$JUNIT Test $@ )
